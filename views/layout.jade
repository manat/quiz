doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/foundation.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/vendor/modernizr.js')
  body.antialiased.hide-extras
    header
      nav.top-bar(data-topbar='data-topbar')
        ul.title-area
          li.name
            h1
              a(href='#') DST 
          li.toggle-topbar.menu-icon
            a(href='#') Menu
        section.top-bar-section
          // Right Nav Section
          ul.right
            li.active
              a(href='#') Right Button Active
            li.has-dropdown
              a(href='#') Right Button with Dropdown
              ul.dropdown
                li
                  a(href='#') First link in dropdown
    section(role='main')
      .row
        block content
    footer
      script(src='/javascripts/vendor/jquery.js')
      script(src='/javascripts/foundation.min.js')
      script
        $(document).foundation();
