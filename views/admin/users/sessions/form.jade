form(action='/admin/login', method='post')
  .row
    .small-12.columns
      label
        | Username
        span.required *
      .row.collapse
        .small-1.columns      
            span.prefix dt
        .small-11.columns
            input(type='text', name='username', required, placeholder='dt number is encouraged (required)')
  .row
    .small-12.columns
      label
        | Password
        span.required *
        input(type='password', name='password', required, placeholder='password (required)')
  .row
    .small-12.columns
      button.tiny.button.green(type='submit') Log in
      span(style='margin-left: 0.5em; font-size: 0.8em') or 
        a(href='/admin/register').small-text-left register yourself